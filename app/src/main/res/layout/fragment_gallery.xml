<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/galleryRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MapView background -->
    <com.mapbox.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mapbox_styleUri="mapbox://styles/mapbox/streets-v12" >

        <LinearLayout
            android:id="@+id/searchContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="120dp"
            android:background="#CCFFFFFF"
            android:elevation="8dp"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/queryEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lavender"
                android:hint="Search for places..."
                android:padding="12dp" />

            <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/black" />

            <Spinner
                android:id="@+id/partyTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/toggleMenuButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="200dp"
            android:background="@android:color/transparent"
            android:src="@drawable/menuopen">

        </ImageButton>

        <ImageButton
            android:id="@+id/radiusButton1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="250dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Change radius"
            android:elevation="8dp"
            android:src="@drawable/distance2" />


        <ImageButton
            android:id="@+id/location"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="300dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Change radius"
            android:elevation="8dp"
            android:src="@drawable/userlocation" />

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.mapbox.search.ui.view.SearchResultsView
                android:id="@+id/searchResultsView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- ðŸ“‹ Recycler for Results -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/customResultsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#CCFFFFFF"
                android:padding="8dp"
                android:visibility="gone" />

            <!-- ðŸ§­ Navigation Buttons -->
            <LinearLayout
                android:id="@+id/navigationButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnToggleSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Toggle Search" />

                <Button
                    android:id="@+id/btnCloseInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp"
                    android:text="Close" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/placeInfoBottomSheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="60dp"
                android:background="@color/lavender"
                android:elevation="16dp"
                android:orientation="vertical"
                android:padding="16dp">


                <TextView
                    android:id="@+id/placeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Place Name"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/placeAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address info"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnToggleResults"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Hide Results" />

                <Button
                    android:id="@+id/btnGetDirections"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get Directions"
                    android:layout_marginTop="8dp"
                    />

                <TextView
                    android:id="@+id/directionStepsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Directions will appear here..."
                    android:layout_marginTop="8dp"
                    android:textColor="@android:color/white"
                    />


            </LinearLayout>

            <Spinner
                android:id="@+id/radiusSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/distance2" />


        </FrameLayout>


    </com.mapbox.maps.MapView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
