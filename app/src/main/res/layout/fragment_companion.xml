<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic17">


    <TextView
        android:id="@+id/bigtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:fontFamily="sans-serif-medium"
        android:text="MultiWay Companion Section"
        android:textColor="#333333"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- Card-like container for the form in the center -->
    <androidx.cardview.widget.CardView
        android:id="@+id/formcontainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp"
        android:background="@android:color/white"
        android:padding="16dp">

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <!-- Horizontal Scroll View with Items -->
            <HorizontalScrollView
                android:id="@+id/horizontalscrollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:orientation="horizontal">

                    <!-- Example items -->
                    <TextView
                        android:id="@+id/item1"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:background="@android:color/holo_purple"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="First Person"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/item2"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="10dp"
                        android:background="@android:color/holo_purple"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="Second Person"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/item3"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="10dp"
                        android:background="@android:color/holo_purple"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="Third Person"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/item4"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="10dp"
                        android:background="@android:color/holo_purple"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="Fourth Person"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Detailed views for each item -->
            <LinearLayout
                android:id="@+id/detailedview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/detailedtitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="First Person"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailedcontent1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Person 1"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detailedview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/detailedtitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Second Person"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailedcontent2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Person 2"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detailedview3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/detailedtitle3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Third Person"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailedcontent3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Person 3"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detailedview4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/detailedtitle4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Fourth Person"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailedcontent4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Person 4"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="Welcome To our travel buddy section!"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="Here are a few people with similar travelling routes"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />


        </FrameLayout>
        <Button
            android:id="@+id/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Back"
            android:visibility="gone"/>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
